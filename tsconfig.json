{
  "compilerOptions": {
    "module": "ES6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop" : true,
    "moduleResolution":"node",
    "target": "ES2015",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
